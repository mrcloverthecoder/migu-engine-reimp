#version 330

out vec3 fNormal;
out vec2 fTexCoord;
out vec4 fColor;

layout(location = 0) in vec3 aPosition;
layout(location = 1) in vec3 aNormal;
layout(location = 2) in vec2 aTexCoord;
layout(location = 3) in vec4 aColor;
layout(location = 4) in ivec4 aBoneIndices;
layout(location = 5) in vec4 aBoneWeights;

uniform mat4 uProjection;
uniform mat4 uView;

uniform mat4 uBoneTransforms[60];

void main(void)
{
	fNormal = aNormal;
	fTexCoord = aTexCoord;
	fColor = aColor;
	
	vec4 mPosition = vec4(0.0);
	
	for(int i = 0; i < 4; i++)
	{
		mPosition = (vec4(aPosition, 1.0) * uBoneTransforms[aBoneIndices[i]]) * aBoneWeights[i] + mPosition;
		//mPosition *= aBoneWeights[i];
		//mPosition += _position;
	}
	
	if(mPosition == vec4(0.0))
		mPosition = vec4(aPosition, 1.0);
	
	gl_Position = vec4(mPosition.xyz, 1.0) * uView * uProjection;
}